@model AddVendorViewModel
@inject WHMS.Services.Common.ICountriesService countries;
@{this.ViewData["Title"] = $"Add vendor";}
@section Breadcrumbs{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="ManageVendors">Manage Vendors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add Vendor</li>
        </ol>
    </nav>
}
<div>
<form asp-controller="Products" asp-action="AddVendor" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control col-md-3">
        <span asp-validation-for="Name" class="text-danger"></span><br />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control col-md-3">
        <span asp-validation-for="Email" class="text-danger"></span><br />
    </div>
    <div class="mt-2">
        <label asp-for="Address.StreetAddress"></label>
        <input asp-for="Address.StreetAddress" class="form-control col-md-5 ">
        <span asp-validation-for="Address.StreetAddress" class="text-danger"></span><br />
    </div>
    <div>
        <label asp-for="Address.StreetAddress2"></label>
        <input asp-for="Address.StreetAddress2" class="form-control col-md-5 ">
        <span asp-validation-for="Address.StreetAddress2" class="text-danger"></span><br />
    </div>
    <div>
        <label asp-for="Address.City"></label>
        <input asp-for="Address.City" class="form-control col-md-5 ">
        <span asp-validation-for="Address.City" class="text-danger"></span><br />
    </div>
    <div>
        <label asp-for="Address.Zip"></label>
        <input asp-for="Address.Zip" class="form-control col-md-5 ">
        <span asp-validation-for="Address.Zip" class="text-danger"></span><br />
    </div>
    <div>
        <label asp-for="Address.Country"></label>
        <select asp-for="Address.Country" class="form-control col-md-5 " asp-items="@countries.GetAllCountries()">
            <option value="">Select country</option>
        </select>
        <span asp-validation-for="Address.Country" class="text-danger"></span><br />
    </div>
    <button class="btn btn-outline-primary" asp-controller="PurchaseOrders" asp-action="AddVendor">Add Vendor</button>
</form>
