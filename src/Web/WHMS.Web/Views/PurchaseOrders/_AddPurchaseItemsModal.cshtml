@model PurchaseOrderDetailsViewModel
    <div class="modal fade bd-AddPurchaseItems-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div asp-validation-summary="All" class="text-danger"></div>
                <h4 class="h4 ml-3">Add purchase items</h4>
                <div class="mt-2 col-sm-10">
                    <form asp-controller="PurchaseItems" asp-action="AddPurchaseItems" method="post">
                        <input id="purchaseOrderId" name="purchaseOrderId" value="@Model.Id" hidden />
                        <input id="vendorId" name="vendorId" value="@Model.Vendor.Id" hidden />
                        <button class="btn btn-primary add_form_field">
                            Add new order item &nbsp;
                            <span style="font-size:16px; font-weight:bold;">+ </span>
                        </button>
                        <div class="PurchaseItem">
                            <div>
                                <label for="PurchaseItems[0].ProductId">Product Id</label>
                                <input class="form-control" required id="PurchaseItems[0].ProductId" name="PurchaseItems[0].ProductId" />
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="PurchaseItems[0].Qty">Qty</label>
                                    <input class="form-control" required id="PurchaseItems[0].Qty" name="PurchaseItems[0].Qty" />
                                </div>
                                <div class="col-sm-6">
                                    <label for="PurchaseItems[0].Cost">Cost</label>
                                    <input class="form-control" required id="PurchaseItems[0].Cost" name="PurchaseItems[0].Cost" />
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-outline-primary justify-content-center mt-2 mb-2" asp-controller="PurchaseOrders" asp-action="AddPurchaseItem">Add items to PO</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


