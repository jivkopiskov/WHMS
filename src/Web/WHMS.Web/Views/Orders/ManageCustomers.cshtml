@model ManageCustomersViewModel

<partial name="_SearchCustomers" model="Model.Filters" />

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Customer name</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Number of orders</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Email</td>
                <td>@customer.FirstName @customer.LastName</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Address.ToString()</td>
                <td>@customer.NumberOfOrders</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @Model.PreviousDisabled">
            <a class="page-link" asp-controller="Orders" asp-action="ManageCustomers" asp-all-route-data="Model.Filters.ToDictionary()" asp-route-page="1">First Page</a>
        </li>
        <li class="page-item @Model.PreviousDisabled">
            <a class="page-link" asp-controller="Orders" asp-action="ManageCustomers" asp-all-route-data="Model.Filters.ToDictionary()" asp-route-page="@(Model.Page - 1)">Previous</a>
        </li>
        @for (int i = Model.FirstPage; i <= Model.LastPage; i++)
        {
            var isactive = i == Model.Page ? "active" : string.Empty;
            <li class="page-item @isactive">
                <a class="page-link" asp-controller="Orders" asp-action="ManageCustomers" asp-all-route-data="Model.Filters.ToDictionary()" asp-route-page="@i" active="@(Model.Page == i)">@i</a>
            </li>
        }
        <li class="page-item @Model.NextDisabled">
            <a class="page-link" asp-controller="Orders" asp-action="ManageCustomers" asp-all-route-data="Model.Filters.ToDictionary()" asp-route-page="@(Model.Page + 1)">Next</a>
        </li>
        <li class="page-item  @Model.NextDisabled"><a class="page-link" asp-controller="Orders" asp-action="ManageCustomers" asp-all-route-data="Model.Filters.ToDictionary()" asp-route-page="@Model.PagesCount">Last Page</a></li>
    </ul>
</nav>