@model ManageBrandsViewModel

<div>
    <a type="button" class="btn-primary p-2" href="/Products/AddBrand" role="button">Add Brand</a>
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Brand Name</th>>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model.Brands)
        {
            <tr>
                <td>@brand.Id</td>
                <td>@brand.Name</td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center" >
        <li class="page-item"><a class="page-link" asp-controller="Products" asp-action="ManageBrands" asp-route-page="1">First Page</a></li>
        <li class="page-item @Model.PreviousDisabled"><a class="page-link" asp-controller="Products" asp-action="ManageBrands" asp-route-page="@(Model.Page - 1)">Previous</a></li>

        @for (int i = Model.FirstPage; i <= Model.LastPage; i++)
        {
            var isactive = i == Model.Page ? "active" : string.Empty;
            <li class="page-item @isactive "><a class="page-link" asp-controller="Products" asp-action="ManageBrands" asp-route-page="@i" active="@(Model.Page == i)">@i</a></li>
        }
        <li class="page-item @Model.NextDisabled"><a class="page-link" asp-controller="Products" asp-action="ManageBrands" asp-route-page="@(Model.Page + 1)">Next</a></li>
        <li class="page-item"><a class="page-link" asp-controller="Products" asp-action="ManageBrands" asp-route-page="@Model.PagesCount">Last Page</a></li>
    </ul>
</nav>