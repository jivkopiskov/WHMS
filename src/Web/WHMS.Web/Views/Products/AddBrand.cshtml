@model BrandViewModel

<form asp-controller="Products" asp-action="AddBrand" method="post">
    <div>
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="Name">Brand name</label>
        <input asp-for="Name" class="form-control col-md-3">
        <span asp-validation-for="Name" class="text-danger"></span><br />
    </div>
    <button class="btn btn-outline-primary" asp-controller="Products" asp-action="AddBrand">Add Brand</button>
</form>
