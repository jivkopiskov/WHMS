@model WHMS.Web.ViewModels.Products.ManufacturerViewModel

<form asp-controller="Products" asp-action="AddManufacturer" method="post">
    <div>
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="Name">Manufacturer name</label>
        <input asp-for="Name" class="form-control col-md-3">
        <span asp-validation-for="Name" class="text-danger"></span><br />
    </div>
    <button class="btn btn-outline-primary" asp-controller="Products" asp-action="AddManufacturer">Add Manufacturer</button>
</form>
