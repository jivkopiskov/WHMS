@model ProductFilterInputModel
    <h5 class="h5"> Search filters</h5>
<div class="row border-top my-3 bg-dark">
    <form asp-controller="Products" asp-action="ManageProducts" method="get">
        <div class="row text-white pb-2 ml-1">
            <div class="col-sm-3">
                <label asp-for="Keyword">SKU / Product Name</label>
                <input asp-for="Keyword" class="form-control" value="@Model.Keyword" />
            </div>
            <div class="col-sm-3">
                <vc:brand-dropdown id="Model?.BrandId ?? 0"></vc:brand-dropdown>
            </div>
            <div class="col-sm-3">
                <vc:manufacturer-dropdown id="Model?.ManufacturerId ?? 0"></vc:manufacturer-dropdown>
            </div>
            <div class="col-sm-3">
                <vc:condition-dropdown id="Model?.ConditionId ?? 0"></vc:condition-dropdown>
            </div>
            <div class="col-sm-3">
                <label asp-for="Sorting">Sorting</label>
                <select asp-for="Sorting" asp-items="@Html.GetEnumSelectList<ProductsSorting>()" class="form-control" value="@Model.Sorting"></select>
            </div>
        </div>

        <button class="btn btn-light mt-2 ml-2" asp-controller="Products" asp-action="ManageProducts">Search</button>
    </form>
</div>