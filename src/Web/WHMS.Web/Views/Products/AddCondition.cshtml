@model ConditionViewModel
@{this.ViewData["Title"] = $"Add Condition";}
@section Breadcrumbs{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Products/ManageConditions">Manage Conditions</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add Condition</li>
        </ol>
    </nav>
}

<form asp-controller="Products" asp-action="AddCondition" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control col-md-3">
        <span asp-validation-for="Name" class="text-danger"></span><br />
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control col-md-5 "></textarea>
        <span asp-validation-for="Description" class="text-danger"></span><br />
    </div>
    <button class="btn btn-outline-primary" asp-controller="Products" asp-action="AddCondition">Add Brand</button>
</form>
