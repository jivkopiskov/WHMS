@model ReportIndexViewModel
<div>
    <figure class="highcharts-figure">
        <div id="container1"></div>
        <p class="highcharts-description">
        </p>
    </figure>
    <figure class="highcharts-figure">
        <div id="container2"></div>
        <p class="highcharts-description">
        </p>
    </figure>
</div>
@{
    var categories = string.Join(", ", Model.QtySoldLastXDays.QtySoldList.Select(x => $"'{x.Date.ToShortDateString()}'"));
    var soldAmount = string.Join(", ", Model.QtySoldLastXDays.QtySoldList.Select(x => x.AmountSold));
    var qtySold = string.Join(", ", Model.QtySoldLastXDays.QtySoldList.Select(x => x.QtySold));
}
@section Scripts{
    <script>
        Highcharts.chart('container1', {
            chart: {
                type: 'spline'
            },
            title: {
                text: 'Sales for last 7 days ($)'
            },
            xAxis: {
                categories: [@Html.Raw(categories)]
            },
            yAxis: {
                title: {
                    text: 'Sales'
                },
            },
            tooltip: {
                crosshairs: true,
                shared: true,
            },
            plotOptions: {
                spline: {
                    marker: {
                        radius: 4,
                        lineColor: '#666666',
                        lineWidth: 1
                    }
                },
            },
            series: [{
                name: 'Sales ($)',
                marker: {
                    symbol: 'square'
                },
                data: [@soldAmount]

            }]
        });
    </script>
    <script>
     Highcharts.chart('container2', {
            chart: {
                type: 'spline'
            },
            title: {
                text: 'Qty sold last 7 days'
            },
            xAxis: {
                categories: [@Html.Raw(categories)]
            },
            yAxis: {
                title: {
                    text: 'Sales'
                },
            },
            tooltip: {
                crosshairs: true,
                shared: true,
            },
            plotOptions: {
                spline: {
                    marker: {
                        radius: 4,
                        lineColor: '#666666',
                        lineWidth: 1
                    }
                },
            },
            series: [{
                name: 'Qty Sold',
                marker: {
                    symbol: 'square'
                },
                data: [@qtySold]

            }]
        });
    </script>
}
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>
<style>
    .highcharts-figure, .highcharts-data-table table {
        min-width: 310px;
        max-width: 800px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #EBEBEB;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }
</style>
